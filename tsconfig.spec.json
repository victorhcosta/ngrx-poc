{
	"extends": "./tsconfig.json",
	"compilerOptions": {
	  "outDir": "./out-tsc/spec",
	  "types": [
		"jest",
		"jsdom",
		"node"
	  ],
	  "emitDecoratorMetadata": true,
	  "experimentalDecorators": true
	},
	"files": [
	  "src/polyfills.ts"
	],
	"include": [
	  "src/**/*.spec.ts",
	  "src/**/*.d.ts"
	],
	"angularCompilerOptions": {
	  "enableIvy": false
	}
  }
